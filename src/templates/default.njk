<!doctype html>
<html lang="en" class="no-js">
<head>
	<script>
		document.documentElement.classList.remove('no-js');
	</script>

	<meta charset="utf-8">
	<base href="{{ config.baseURL }}">
	<title>
		{{- content.metas.title -}}
		{%- if not content.isHome %}
		–
		{{  content.font.family }}
		{{ content.font.name | capitalize }}
		{% endif -%}
	</title>

	<meta name="description" content="{{ content.metas.description }}">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">


	{# MOBILE GLOBAL #}
	<meta name="HandheldFriendly" content="true">
	<meta name="msapplication-tap-highlight" content="no">
	<meta name="format-detection" content="telephone=no">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover">

	<meta name="twitter:image" content="https://bretagnebretagne.fr/images/cover.png">
	<meta property="og:image" content="https://bretagnebretagne.fr/images/cover.png">
	<meta itemprop="image" content="https://bretagnebretagne.fr/images/cover.png">

	{# FB #}
	<meta property="og:type" content="website">
	<meta property="og:title" content="{{ content.metas.title }}">
	<meta property="og:image:width" content="1600">
	<meta property="og:image:height" content="840">
	<meta property="og:site_name" content="{{ content.metas.title }}">
	<meta property="og:description" content="{{ content.metas.description }}">
	<meta property="og:url" content="https://bretagnebretagne.fr">

	{# TWITTER #}
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:site" content="@lucaslebihan">
	<meta name="twitter:creator" content="@lucaslebihan">
	<meta name="twitter:title" content="{{ content.metas.title }}">
	<meta name="twitter:description" content="{{ content.metas.description }}">
	<meta name="twitter:url" content="https://bretagnebretagne.fr">


	<style>
		@font-face {
			font-family: 'insitu light';
			src: url('fonts/insitu_light-webfont.woff2') format('woff2'),
				url('fonts/insitu_light-webfont.woff') format('woff');
			font-weight: normal;
			font-style: normal;
			font-display: swap;
	</style>
	<style>
		{{- config.style -}}
	</style>
	{% if not config.development -%}
	<link rel="stylesheet" href="{{ config.paths.assets ~ '/css/bundle.css' }}">
	{%- endif %}
</head>
<body {% if content.isHome %}class="home"{% endif %}>

	<header>
		<figure class="header-picture">
			<a href="{{ config.baseURL }}" data-route>
			<img src="images/bretagne.jpg" alt="Photography of Britanny">
			</a>
		</figure>
		<section class="header-about">
			<a href="{{ config.baseURL }}" data-route>
				{{- content.card.title -}}
			</a>
		</section>
		<section class="header-author">
			<p class="author-infos">
				{{- content.card.message -}}
			</p>
			<p class="author-contacts">
				<a href="mailto:{{ content.card.email }}?subject=Bretagne • Contact">
					{{- content.card.email -}}
				</a>
				<br>
				<a href="tel:+33683131378">
					{{- content.card.tel -}}
				</a>
			</p>
		</section>
	</header>

	<main>
	{{ font | dump }}
		<section class="menu">
			<nav class="menu-fonts">
				<ul>
					{% include "fontsList.njk" %}
				</ul>
			</nav>
			<aside class="menu-controller">
				<div class="controller-resizer">
					<button class="resizer-button button-decrease">-</button>
					<span class="resizer-value">48pt</span>
					<button class="resizer-button button-increase">+</button>
				</div>
				<div class="controller-sound">
					<button class="sound-button">Sound Off</button>
				</div>
			</aside>
		</section>

		<section
			class="visualizer"
			autocomplete="off"
			autocorrect="off"
			autocapitalize="off"
			spellcheck="false"
			{% if not content.isHome %}style="font-family:'{{content.font.slug}}'"{% endif %}
			contenteditable
		>
			{{- content.sample -}}
		</section>
	</main>

	<script src="{{ config.paths.assets ~ '/js/bundle.js' }}" async></script>
</body>
</html>
